<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swKeepScreen"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="השאר מסך דולק קבוע"
                    android:textColor="#FFFFFF" />

                <RadioGroup
                    android:id="@+id/rgLocationMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <RadioButton
                        android:id="@+id/rbList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="מיקום מהרשימה"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="20dp"/>

                    <RadioButton
                        android:id="@+id/rbGps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS מיקום"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:text="שעון ההלכה"
                        android:textColor="#00FF00"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/spinnerLocations"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFF" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvCoords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:text="Lat: 0.0 Long: 0.0 Alt: 0"
                    android:textColor="#F8F6F6"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/tvHebDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#333333"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:textColor="#00FFFF"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvHoliday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF00FF"
            android:textSize="18sp"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#444"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שעה זמנית - גר&quot;א"
                    android:textColor="#FFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvGraClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#00FF00"
                    android:textSize="35sp"
                    android:textStyle="bold" />
                <TextView android:id="@+id/tvGraMin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0 דק'" android:textColor="#00FFFF" android:textSize="16sp"/>
                <TextView android:id="@+id/tvGraDef" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="הנץ - שקיעה" android:textColor="#888" android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שיטת זריחה ושקיעה"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:id="@+id/rgSunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSunVisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.833-°"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="10dp"/>

                    <RadioButton
                        android:id="@+id/rbSunZero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0°"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="#444" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שעה זמנית - מג&quot;א"
                    android:textColor="#FFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvMgaClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#00FF00"
                    android:textSize="28sp"
                    android:textStyle="bold" />
                <TextView android:id="@+id/tvMgaMin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0 דק'" android:textColor="#00FFFF" android:textSize="14sp"/>
                <TextView android:id="@+id/tvMgaDef" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="עלות - צאת" android:textColor="#888" android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שיטת עלות וצאהכ דרת"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:id="@+id/rgMga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbMga16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16-°"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="10dp"/>

                    <RadioButton
                        android:id="@+id/rbMga19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.75-°"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#444"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שמש"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="גובה:"
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvSunAlt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.222°-"
                        android:textColor="#00FF00"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="אזימוט:"
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"/>
                    <TextView android:id="@+id/tvSunAz" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0°" android:textColor="#00FFFF" android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="#444" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ירח"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="גובה:"
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvMoonAlt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-10.222°"
                        android:textColor="#00FF00"
                        android:textDirection="ltr"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="אזימוט:"
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"/>
                    <TextView android:id="@+id/tvMoonAz" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0°" android:textColor="#00FFFF" android:textSize="14sp"/>
                </LinearLayout>

                <TextView android:id="@+id/tvMoonPercent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50%" android:textColor="#FF00FF" android:textSize="14sp" android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#444"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tvUtcOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UTC+2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tvMainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="12:00:00"
                android:textColor="#00FF00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tvGregDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="25/01/2025"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#444"/>

        <TextView
            android:id="@+id/tvZmanimList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="טוען זמנים..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:lineSpacingExtra="8dp"
            android:gravity="center"/>

        <Space android:layout_width="match_parent" android:layout_height="30dp"/>

    </LinearLayout>
</ScrollView>
